{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./shared/ui/*"],
      "@/hooks/*": ["./shared/hooks/*"],
      "@/utils/*": ["./shared/lib/*"],
      "@/types": ["./types"],
      "@/api/*": ["./api/*"],
      "@/config/*": ["./config/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
